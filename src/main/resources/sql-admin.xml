<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0/EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.cloudlibrary.admin.infrastructure.mapper.AdminMapper">

    <select id="findAdminAll" resultType="com.cloudlibrary.admin.application.domain.Admin">
        <![CDATA[
            select * from admin
        ]]>
    </select>

    <select id="findAdminByAdminId" resultType="com.cloudlibrary.admin.application.domain.Admin" parameterType="Long">
       <![CDATA[
        select * from admin where admin_id=#{adminId}
        ]]>
    </select>

    <select id="findAdminByEmail" resultType="com.cloudlibrary.admin.application.domain.Admin" parameterType="String">
       <![CDATA[
        select * from admin where email=#{email}
        ]]>
    </select>

    <select id="findAdminById" resultType="com.cloudlibrary.admin.infrastructure.persistence.mysql.entity.AdminEntity" parameterType="String">
       <![CDATA[
        select * from admin where id=#{id}
        ]]>
    </select>

    <select id="findAuthAll" resultType="com.cloudlibrary.admin.application.domain.Auth">
        <![CDATA[
        select * from auth
        ]]>
    </select>

</mapper>